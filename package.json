{
  "name": "hr-tools",
  "version": "0.0.7",
  "main": "electron/main.js",
  "author": {
    "name": "Sang nguyen",
    "url": "https://github.com/sang2770",
    "email": "nguyenvansang30102001@gmail.com"
  },
  "description": "Tool management for HR",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "electron .",
    "start:electron-dev": "cross-env ENV=dev concurrently \"npm run watch\" \"npm run electron\"",
    "build-prod": "electron-builder --publish=always",
    "electron-build": " electron-builder --win --linux --publish=never"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/cdk": "^18.2.11",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@google/generative-ai": "^0.21.0",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.3.9",
    "exceljs": "^4.4.0",
    "file-saver": "^2.0.5",
    "pdf-parse": "^1.1.1",
    "rxjs": "~7.8.0",
    "sqlite3": "^5.1.7",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.11",
    "@angular/cli": "^18.2.11",
    "@angular/compiler-cli": "^18.2.0",
    "@types/file-saver": "^2.0.7",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.5.2"
  },
  "build": {
    "appId": "com.sang.nv.hrtools",
    "productName": "HR Tools",
    "icon": "public/icon.png",
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "sang2770",
        "repo": "hr-tools"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "deb",
      "maintainer": "Sang Nguyen"
    }
  }
}
